@model SalesViewModel
@inject ISelectProductType services
@section title {
    <div class="row">
        <div class="col-7"><h3>Cashier's Console</h3></div>
        <div class="col-2"><label for="cashier">Cashier Name:</label></div>
        <div class="col-3">
            @* Display Cashier's name here *@
            @User?.Identity?.Name
        </div>
    </div>
}

<select asp-for="SelectedCategoryId" class="form-control" asp-items="@await services.GetProductsCategory()">

    @if (Model is null)
    {
        <option selected="selected" value="">Choose a type</option>
    }


@foreach (var item in @Model.Categories)
{
        <a asp-action="GetProductsByCategoryIdAjax" asp-controller="Sales" asp-route-id="@item.Id"
       data-ajax="true"
       data-ajax-method="GET"
       data-ajax-update="#productsPartial"
       data-ajax-mode="replace-with">  </a>
        }
    
 



      
        </select>
  
  
   
  
    
    <br />
<tbody id="productsPartial">
    <partial name="_Products" model="@Model.Products" />
</tbody>
        